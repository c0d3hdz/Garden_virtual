---
const menuItems = [
    { name: 'Inicio', link: '/' },
    { name: 'Minijuegos', link: '/minijuegos' },
    { name: 'Enciclopedia', link: '/enciclopedia' },
    { name: 'Comunidad', link: '/comunidad' }
];
---

<nav>
    {menuItems.map(item => (
        <a href={item.link}><p>{item.name}</p></a>
    ))}
</nav>

<style>
    nav{
        width: 100%;
        display: flex;
        gap: 1rem;
        justify-content: space-around;
        a{
            width: 150px;
            height: 70px;
            padding: 25px;
            box-sizing: content-box;
            border-radius: 15px;
            display: flex;
            justify-content: center;
            align-items: center;
            border:solid 1px color-mix(in srgb, #00ff006b 50%, #008000 50%);
            text-decoration: none;
            color: #15cf00;
            font-size: 1.2rem;
            background-image: radial-gradient(circle, rgba(255, 255, 0, 0.331) 0%, #00800083 100%);
        }
        a:hover {
            p{
                background-image: radial-gradient(circle, #fff200 0%, #91ff00 100%); 
                -webkit-background-clip: text;
                background-clip: text;
                color: transparent;
            }
        }
    }
    @media (max-width: 768px){
        nav{
            text-align: center;
            align-items: center;
            flex-wrap: wrap;
            a{
                height: min-content;
                padding: 10px;
                font-size: 1rem;
            }
        }
    }
</style>